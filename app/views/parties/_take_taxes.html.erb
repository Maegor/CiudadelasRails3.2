<div id="take_taxes" class="hidden">
  <div class="popupContainer">
    <div class="action_info"><%=(t 'board.take_taxes') %></div>
    <a class="closePopup"></a>

    <div class="popupContent">
      <% taxes = current_user.player.calculate_taxes %>

      <% if taxes > 0 %>
          <div id="taxes_recount">
            <p><%= t 'board.will_get' %></p>

            <p><%= taxes %></p>

            <p><%= t 'board.coins' %></p>


            <div class="ok_button">
              <%= #noinspection RubyResolve
                  link_to (t 'board.collect'), party_action_path(@game.id, [action.id]) %>
            </div>
          </div>

      <% else %>

          <div class="actionMessage"><%= t 'board.no_taxes' %></div>

      <% end %>

    </div>
  </div>
  <div class="overlayEffect">
  </div>
</div>