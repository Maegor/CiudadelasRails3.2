<div id="bell_tower" class="hidden">
  <div class="popupContainer">
    <div class="action_info"><%=(t 'board.select_an_option') %></div>
    <a class="closePopup"></a>

    <div class="popupContent">
      <div>

           <div class="actionMessage"><%= t  'board.cut_down_game'%></div>
        <div id="options">
          <div class="option_button">
          <%=
              #noinspection RubyResolve
              link_to (t 'board.agree'), party_action_path(@game.id, [action.id, true]) %>
          </div>
          <div class="option_button">
          <%=
              #noinspection RubyResolve
              link_to (t 'board.disagree'), party_action_path(@game.id, [action.id, false]) %>
          </div>
        </div>


      </div>
    </div>
  </div>

  <div class="overlayEffect">
  </div>
</div>
