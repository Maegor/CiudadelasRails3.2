<%= form_tag form_action 'change_with_player' do %>


  <% current_user.player.opponents.each do |opponent|  %>

         <div class="image-radio-container">
           <%= radio_button_tag 'opponent[]', opponent.id %>
          <% character = opponent.player_character
             #only displays characters of player that finished his turn
             if character != nil  && opponent.state != "WAITING_TURN"%>
              <%=  image_tag "cards/" + character.base_card.name + ".jpg" %>
          <% else %>

              <%= image_tag "cards/cardback.jpg" %>
          <%end%>



       <div><%= opponent.name %></div>


        </div>


  <%end%>
<%= submit_tag  "Cambiar" %>
<%end%>



