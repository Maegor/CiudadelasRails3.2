<div  id="ficha_jugador" class="player_lane">
  <div id="char">
     <%= image_tag 'scroll_icon.png', :id => 'messages_icon' %>
    <% if (character_ui = current_user.player.player_character) %>
        <%= render :partial => 'character_ui', :object => character_ui %>

    <% else%>
        <div class="character_ui" id="nochar_ui"></div>
    <%end%>

  </div>
  <div class="data_user" id="golds">
    <div class="value"> <%= current_user.player.coins %></div>
  </div>
  <div class="data_user" id="points">
    <div class="value"><%= current_user.player.districts_on_game.length%></div>
  </div>

</div>




<div id="distritos_construidos" class="player_lane">
  <div class="card_container">
  <% current_user.player.districts_on_game.each do |district_card|%>

      <%= render :partial => 'district_card', :object => district_card %>

  <% end %>
  </div>
</div>


<div id="cartas_mano" class="player_lane">
<div class="card_container">
  <% current_user.player.districts_on_hand.each do |district_card|%>

        <%= render :partial => 'district_card', :object => district_card %>
  <% end %>
</div>

</div>

<%= render :partial => 'action_icons' %>


<%if current_user.player.state == 'ACTION'%>

  <div id="finturno">

   <div>
  <%= link_to (t 'board.finish'), end_turn_path %>
</div>

  </div>
<%end%>


<div id="messages_container" class="hidden">
  <div class="popupContainer">
    <a  class="closePopup" title="close popup"></a>

    <div class="popupContent">
         <% @game.game_messages.order('id DESC').each do |message|%>
            <p><%= t message.message ,:actor_player => message.actor_player, :target_player => message.target_player, :target_district => (t message.target_district), :quantity => message.quantity %></p>
        <%end%>
    </div>
  </div>
</div>
<div id="overlayEffect">
</div>

<script type="text/javascript">

   var multiplier = 76;
   var num_cards = $('#distritos_construidos .card').size();
   // card_width = $('#distritos_construidos .card').css('width');
   // multiplier = parseInt(card_width.substring(0, card_width.length));


  $('#distritos_construidos .card_container').css('width',(num_cards * multiplier) + (num_cards * 5)) ;

    num_cards = $('#cartas_mano .card').size();
  //  card_width = $('#cartas_mano .card').css('width');
   // multiplier = parseInt(card_width.substring(0, card_width.length - 2));
    $('#cartas_mano .card_container').css('width',(num_cards * multiplier) + (num_cards * 5));


            $('#distritos_construidos, #cartas_mano, #lista_jugadores').jScrollPane({

                });
     //activamos todos los scrollbars.
   $('.container_cards_pop').jScrollPane({autoReinitialise: true});

</script>
