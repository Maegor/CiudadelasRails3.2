      $('#messages_container').find('.popupContent').replaceWith(response.find("#messages_container .popupContent"));

      AddListenerToButton('messages_icon');
      imagePreview();
       var listNew = $('#lista_jugadores');
       var buildNew = $("#distritos_construidos");
       var handNew = $("#cartas_mano");
       listNew.find('.jspPane').css({'top': jspPanetop});
       listNew.find('.jspDrag').css({'top': jspDragtop} );
       buildNew.find('.jspPane').css({'left': jspBuildLeft});
       buildNew.find('.jspDrag').css({'left': jspBuildDrag});
       handNew.find('.jspPane').css({'left': jspBuildLeft_hand});
       handNew.find('.jspDrag').css({'left': jspBuildDrag_hand});

