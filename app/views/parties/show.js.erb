<% if @game.state != 'FINISHED'%>


     //Datos del  scroll vertical de la lista de jugadores
     var listOriginal = $('#lista_jugadores');
     var jspPanetop = listOriginal.find('.jspPane').css('top');
     var jspDragtop = listOriginal.find('.jspDrag').css('top');

     var build_district = $("#distritos_construidos");
     var jspBuildLeft =   build_district.find('.jspPane').css('left');
     var jspBuildDrag =   build_district.find('.jspDrag').css('left');

    var build_district_hand = $("#cartas_mano");
    var jspBuildLeft_hand =   build_district_hand.find('.jspPane').css('left');
    var jspBuildDrag_hand =   build_district_hand.find('.jspDrag').css('left');


<%  if session[:refresh] %>
     //$('#tablero').replaceWith("<%#=escape_javascript (render :partial => 'tablero') %>");
