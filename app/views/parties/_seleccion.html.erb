<% if current_user.player.state == 'SELECTION_TURN'  %>

    <div id="lista_personajes" class="popupContainer" class="hidden">
      <h2>Elige Personaje</h2>
      <% %w(characters_list  faceup).each_with_index do |option,index| %>
      <div class="tab_data">
        <div class="<%= selected_class('tab', index) %>"><%=t ('board.' + option)%></div>
        <div class="<%= visible_class('cards', index) %>">
          <%= render :partial => option %>
        </div>
      </div>
    <% end %>
    </div>
    <script type="text/javascript">
        loadPopup();
        tabs("lista_personajes");
    </script>


<% elsif current_user.player.state == 'TURN'%>


<div id="acciones" class="popupContainer" class="hidden">

<% action_list = current_user.player.actions%>
  <h2><%= action_title(action_list) %></h2>
  <div id="action_container">
  <% action_list.each do |action|%>
        <%= #noinspection RubyResolve
            render :partial => action.base_action.partialname, :locals => {:action => action}%>
     <% end %>

 </div>
</div>

    <script type="text/javascript">
        loadPopup();
    </script>

<% elsif current_user.player.state == 'ACTION'

     action_list = current_user.player.actions%>



      <%action_list.each do |action|%>
            <div class="actiondiv">
            <%= #noinspection RubyResolve
                render :partial => action.base_action.partialname, :locals => {:action => action} %>
        </div>

      <%end%>

<% end %>



