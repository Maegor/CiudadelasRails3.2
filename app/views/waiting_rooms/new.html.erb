<% content_for :head do%>


    <%= stylesheet_link_tag  'parties', 'style' , 'home', 'menu', 'polyglot-language-switcher' %>
    <%= javascript_include_tag 'jquery.polyglot.language.switcher' %>

<% end %>

<%= render 'shared/langs' %>



<% if @waiting_room.errors.any? %>
    <div class="error_explanation">
      <h2><%=t 'new.fields_with_erros' %></h2>

      <ul>
        <% @waiting_room.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>



<%= form_for @waiting_room, :html =>{:class=> 'form-4'} do |f| %>


    <h1><%= t 'new.create_game' %></h1>
    <p>
      <%=  f.label 'name' %>
      <%=  f.text_field 'name', {:placeholder =>(t 'new.name')} %>
    </p>
    <p>
      <%=  f.label 'user' %>
      <%=  f.select 'user', Party::PLAYERS_ENABLE,{:prompt =>(t 'new.players')}%>
    </p>

    <p>
      <%= f.submit (t 'new.create')%>
    </p>

    <%= link_to (t 'back'), root_path %>

<% end%>
